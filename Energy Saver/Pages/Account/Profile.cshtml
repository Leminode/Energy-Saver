@page
@model acme.Pages.ProfileModel
@{
    ViewData["Title"] = "User Profile";
}

<div class="row">
    <div class="col-md-12">
        <div class="row text-color">
            <h2>@ViewData["Title"]</h2>

            <div class="col-md-2">
                <img src="@Model.UserProfileImage"
                     alt="" class="img-rounded img-responsive" />
            </div>
            <div class="col-md-4 text-color">
                <form method="post">
                    <div class="form-group">
                        <label asp-for="UserName" class="control-label">User Name</label>
                        <input asp-for="UserName" class="form-control" />
                        <span asp-validation-for="UserName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="UserEmailAddress" class="control-label">Email Address</label>
                        <input asp-for="UserEmailAddress" class="form-control" />
                        <span asp-validation-for="UserEmailAddress" class="text-danger"></span>
                    </div>
                    <div class="form-group" style="margin-top: 10px">
                        <input type="submit" value="Save" class="btn" asp-page-handler="Details" /> 
                        <input type="submit" value="Change Password" class="btn" style="margin-left: 10px" asp-page-handler="Password" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
