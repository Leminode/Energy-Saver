@page
@using Energy_Saver.Model
@model Energy_Saver.Pages.InputModel

@{
    ViewData["Title"] = "Input";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1 class="text-color">Input</h1>
<hr class="text-color" />

<div class="row justify-content-between">
    <div class="col-md-2">
        <form method="post">
            <div class="row mb-2">
                <div class="col">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-floating">
                        <select asp-for="Taxes.Year" class="form-control">
                        @for (int i = DateTime.Now.Year; i > 1919; i--)
                        {
                            <option value="@i">@i</option>
                        }
                        </select>
                        <span asp-validation-for="Taxes.Year" class="text-danger"></span>
                        <label asp-for="Taxes.Year" class="control-label"></label>
                    </div>
                </div>
            </div>
            <div class="row mb-2">
                <div class="col">
                    <div class="form-floating">
                        <select asp-for="Taxes.Month" class="form-control">
                        @foreach (Months i in Enum.GetValues(typeof(Months)))
                        {
                            <option value ="@i">@i.ToString()</option>
                        }
                        </select>
                        <span asp-validation-for="Taxes.Month" class="text-danger"></span>
                        <label asp-for="Taxes.Month" class="control-label"></label>
                    </div>
                </div>
            </div>
            <div class="row mb-2">
                <div class="col">
                    <div class="form-floating">
                        <input asp-for="Taxes.GasAmount" class="form-control" />
                        <span asp-validation-for="Taxes.GasAmount" class="text-danger"></span>
                        <label asp-for="Taxes.GasAmount" class="control-label">Gas price</label>
                    </div>
                </div>
            </div>
            <div class="row mb-2">
                <div class="col">
                    <div class="form-floating">
                        <input asp-for="Taxes.ElectricityAmount" class="form-control" />
                        <span asp-validation-for="Taxes.ElectricityAmount" class="text-danger"></span>
                        <label asp-for="Taxes.ElectricityAmount" class="control-label">Electricity amount</label>
                    </div>
                </div>
            </div>
            <div class="row mb-2">
                <div class="col">
                    <div class="form-floating">
                        <input asp-for="Taxes.WaterAmount" class="form-control" />
                        <span asp-validation-for="Taxes.WaterAmount" class="text-danger"></span>
                        <label asp-for="Taxes.WaterAmount" class="control-label">Water amount</label>
                    </div>
                </div>
            </div>
            <div class="row mb-2">
                <div class="col">
                    <div class="form-floating">
                        <input asp-for="Taxes.HeatingAmount" class="form-control" />
                        <span asp-validation-for="Taxes.HeatingAmount" class="text-danger"></span>
                        <label asp-for="Taxes.HeatingAmount" class="control-label">Heating amount</label>
                    </div>
                </div>
            </div>
            <div class="form-group mt-3">
                <input type="submit" value="Enter" class="btn btn-primary" asp-page-handler="Data"/>
            </div>
        </form>
    </div>
    <div class="col-md-2">
        <form method="post">
            <div class="row mb-2">
                <div class="col">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-floating">
                        <select asp-for="Year" class="form-control">
                            @for (int i = DateTime.Now.Year; i > 1919; i--)
                            {
                                <option value="@i">@i</option>
                            }
                        </select>
                        <span asp-validation-for="Year" class="text-danger"></span>
                        <label asp-for="Year" class="control-label"></label>
                    </div>
                </div>
            </div>
            <div class="row mb-2">
                <div class="col">
                    <div class="form-floating">
                        <select asp-for="Month" class="form-control">
                            @foreach (Months i in Enum.GetValues(typeof(Months)))
                            {
                                <option value="@i">@i.ToString()</option>
                            }
                        </select>
                        <span asp-validation-for="Month" class="text-danger"></span>
                        <label asp-for="Month" class="control-label"></label>
                    </div>
                </div>
            </div>
            <div class="row mb-2">
                <div class="col">
                    <div class="form-floating">
                        <input asp-for="UserEmailPassword" class="form-control" type="password"/>
                        <span asp-validation-for="UserEmailPassword" class="text-danger"></span>
                        <label asp-for="UserEmailPassword" class="control-label">Email password</label>
                    </div>
                </div>
            </div>
            <div class="form-group mt-3">
                <input type="submit" value="Enter" class="btn btn-primary" asp-page-handler="Email" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
