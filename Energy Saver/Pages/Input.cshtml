@page
@using Energy_Saver.Model
@model Energy_Saver.Pages.InputModel

@{
    ViewData["Title"] = "Input";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Taxes</h1>
<hr />
<div class="row">
    <div class="col-md-2">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Taxes.Year" class="control-label"></label>
                <select asp-for="Taxes.Year" class="form-control" />
                @for (int i = DateTime.Now.Year; i > 1919; i--)
                {
                    <option value="@i">@i</option>
                }
                </select>
                <span asp-validation-for="Taxes.Year" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Taxes.Month" class="control-label"></label>
                <select asp-for="Taxes.Month" class="form-control">
                @foreach (Months i in Enum.GetValues(typeof(Months)))
                {
                    <option value ="@i">@i.ToString()</option>
                }
                </select>
                <span asp-validation-for="Taxes.Month" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Taxes.GasAmount" class="control-label"> Gas price</label>
                <input asp-for="Taxes.GasAmount" class="form-control" />
                <span asp-validation-for="Taxes.GasAmount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Taxes.ElectricityAmount" class="control-label">Electricity amount</label>
                <input asp-for="Taxes.ElectricityAmount" class="form-control" />
                <span asp-validation-for="Taxes.ElectricityAmount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Taxes.WaterAmount" class="control-label">Water amount</label>
                <input asp-for="Taxes.WaterAmount" class="form-control" />
                <span asp-validation-for="Taxes.WaterAmount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Taxes.HeatingAmount" class="control-label">Heating amount</label>
                <input asp-for="Taxes.HeatingAmount" class="form-control" />
                <span asp-validation-for="Taxes.HeatingAmount" class="text-danger"></span>
            </div>
            <div>   
            </div>
            <div class="form-group">
                <input type="submit" value="Enter" class="btn btn-primary" style="margin-top: 10px"/>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
